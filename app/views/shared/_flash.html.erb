
<div id="notice" data-controller="flash"
  class="fixed flex items-center w-full max-w-xs p-4 -z-50 space-x-4 text-gray-500 bg-white divide-x rtl:divide-x-reverse divide-gray-200 rounded-lg shadow top-16 right-5 dark:text-gray-400 dark:divide-gray-700 space-x dark:bg-gray-800" role="alert">
  <% if notice.present? %>
    <div class="text-sm font-normal">
      <%= notice %>
    </div>
  <% end %>
</div>
