<div class="flex items-center justify-center">
  <%= form_with(model: task, class: "w-full max-w-lg") do |form| %>
    <div class="mb-5">
      <%= form.label "Title", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= form.text_field :title, placeholder: "Title",
          class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
      %>
    </div>

    <div class="mb-5">
      <%= form.label "Description", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= form.text_area :description, placeholder: "Description",
        rows: 8, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
      %>
    </div>

    <div class="mb-5">
      <%= form.label "Category", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= form.select :category_id,
        options_for_select([["Select an option", ""]].concat(Category.pluck(:name, :id))),
        { include_hidden: false },
        class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
      %>
    </div>

    <div class="md:flex md:items-center">
      <div class="md:w-2/3">
        <%= form.submit "Save",
          class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded"
        %>
      </div>
    </div>
  <% end %>
</div>
