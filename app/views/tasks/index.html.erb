<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
    <%= notice %>
  </p>
<% end %>

<div class="p-1">
  <div class="p-4">
    <%= render "form", task: @task %>
  </div>

  <div class="relative overflow-x-auto shadow-md sm:rounded-lg p-4" data-controller="tasks">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 ">
      <thead class="text-xs  uppercase bg-gray-50 dark:bg-gray-700 text-white">
        <tr>
          <th scope="col" class="px-6 py-3">
            Title
          </th>
          <th scope="col" class="px-6 py-3">
            Status
          </th>
          <th scope="col" class="px-6 py-3">
            Action
          </th>
        </tr>
      </thead>
      <%= render @tasks %>
    </table>
  </div>
</div>
